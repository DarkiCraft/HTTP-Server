Checks: >
  -*,
  bugprone-*,
  clang-analyzer-*,
  modernize-*,
  performance-*,
  readability-*,
  cert-*,
  cppcoreguidelines-*

  -modernize-use-trailing-return-type
  
HeaderFilterRegex: '.*'
FormatStyle: file
CheckOptions:
  - key:             readability-braces-around-statements.ShortStatementLines
    value:           '1'
  - key:             modernize-use-nullptr.NullMacros
    value:           'NULL'
